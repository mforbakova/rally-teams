{block content}
<div id="banner">
	<h1 n:block=title>Konfigurátor rally teamů</h1>
</div>

<div id="content">
	<div id="user_form">
		<h4>Registrace účastníka</h4>
		{control registrationFormUser}
	</div>
	<hr>
	<div id="team_form">
		<h4>Registrace teamu</h4>
		{control registrationFormTeam}
	</div>

			{foreach $teams as $team}

					<table id="table_teams">
						<tr>
							<th colspan=2>Team "{$team->getName()}"</th>
						</tr>

						{foreach \App\Service\TeamFacade::ROLES_SETTINGS as $role => $settings}
							<tr>
								<th>{$settings['label']}:</th>
								<td>
									{foreach $team->getUsersByRole($role) as $key => $player}
										<span n:if="$key > 0"><br></span>
										<span>{$player->getName()} {$player->getSurname()}</span>
									{/foreach}
								</td>
							</tr>
						{/foreach}
						
					</table>

			{/foreach}
</div>

<style>
	html { font: normal 18px/1.3 Georgia, "New York CE", utopia, serif; color: #666; -webkit-text-stroke: 1px rgba(0,0,0,0); overflow-y: scroll; }
	body { background: #3484d2; color: #333; margin: 2em auto; padding: 0 .5em; max-width: 600px; min-width: 320px; }

	a { color: #006aeb; padding: 3px 1px; }
	a:hover, a:active, a:focus { background-color: #006aeb; text-decoration: none; color: white; }

	#banner { border-radius: 12px 12px 0 0; background-image: url(data:image/png;base64,); }

	h1 { font: inherit; color: white; font-size: 50px; line-height: 121px; margin: 0; padding-left: 4%; background: no-repeat 95%; background-size: 130px auto; text-shadow: 1px 1px 0 rgba(0, 0, 0, .9); }
	@media (max-width: 600px) {
		h1 { background: none; font-size: 40px; }
	}

	#content { background: white; text-align: left; border: 1px solid #eff4f7; border-radius: 0 0 12px 12px; padding: 10px 4%; overflow: hidden; }

	h2 { font: inherit; padding: 1.2em 0; margin: 0; }

	img { border: none; float: right; margin: 0 0 1em 3em; }

	table {
		width: 100%;
		margin: 5px;
	}
	table, th, td {
		border: 1px solid black;
		border-collapse: collapse;
		padding: 5px;
	}

	#table_teams th {
		width: 40%;
		color: yellow;
		background: grey;
	}

</style>